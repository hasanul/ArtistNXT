<% content_for :page_title do %>
  <title>ArtistNXT | My Music</title>
<% end %>

<div class="contenttitle_area">
        <h2 class="logintitle2">My Music</h2>
</div>

<%@mobile_device_class=""%>
<%= render :partial => 'profile/index_left' %>
<div class="rightpartWrap col-md-10"> <!-- rightpartWrap start -->
        <div class="rightPart clearfix"> <!-- rightPart start -->
                <div class="contentCol col-md-9"> <!-- contentCol start -->
                        <div class="content">
                          <%if @purchasedMusics != nil && @purchasedMusics.length > 0 %>
                            <table cellpadding="0" cellspacing="0" border="0" class="table">
                              <thead>
                                <tr>          
                                  <th>Title</th>              
                                  <th>Artist</th>
                                  <th width="15%">Date</th>
                                  <th></th>
                                </tr>
                              </thead>
                            
                              <tbody>
                                <%              
                                  @purchasedMusics.each do |item|              
                                  %>
                                  <tr>            
                                    <td>                  
                                      <%= link_to item.product_name, download_music_path(:unqiue_key=>item.unique_key.to_s) %>
                                    </td>
                                    <td width="15%">
                                        <%=getMusicsArtistName(item.product_id,true)%>
                                    </td>
                                    <td><%=item.created_at.to_time.utc.strftime('%Y-%m-%d') %></td>                
                                    <td>
                                        <%= link_to 'Download Music', download_music_path(:unqiue_key=>item.unique_key.to_s) %>
                                    </td>
                                  </tr>
                                <% end %>
                              </tbody>
                            </table>
                          <%
                          else%>
                            <div class="no_purchase">You have not purchased any music</div>
                          <%end%>
                        </div>
                </div> <!-- contentCol end -->
                <%= render :partial => 'profile/index_right' %>
        </div> <!-- rightPart end -->
</div> <!-- rightpartWrap end -->
<%@mobile_device_class=" mobile_device"%>
<%= render :partial => 'profile/index_left' %>