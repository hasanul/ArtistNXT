<% content_for :page_title do %>
  <title>ArtistNXT | <%= @event.title %></title>
<% end %>
<% content_for :page_meta do %>
  <meta name="description" content="<%= @event.title %>" />
  <meta property="og:site_name" content="ArtistNXT">
  <meta property="og:title" content="<%= @event.title %>"/>
  <meta property="og:type" content="article"/>
                
  <meta property="og:url" content="<%=request.url%>">
  <% if @event.event_image.to_s != "" %>
  <meta property="og:image" content="<%=root_url+@event.event_image.to_s[1..-1]%>"/>
  <%end%>
<% end %>
<div class="contenttitle_area">
  <h2 class="logintitle2">Event Details</h2>
</div>
<div class="contentCol">
    <div class="content">
      <h1><%= @event.title %></h1>
      <% if @event.start_date!= nil %>
      <dl>			
        <dt>Start Date:</dt>
        <dd><%= @event.start_date.to_time.utc.strftime('%Y-%m-%d %H:%M:%S') %></dd> 
      </dl>
      <% end %>
      
      <% if @event.end_date!= nil %>
      <dl>			
        <dt>End Date:</dt>
        <dd><%= @event.end_date.to_time.utc.strftime('%Y-%m-%d %H:%M:%S')%></dd> <!-- Time.now.utc.strftime("%I:%M%p") # => "04:48PM" Time.now.utc.getlocal.strftime("%I:%M%p") # => "12:48PM" -->
      </dl>
      <% end %>
      
      <% if @event.location!= nil %>
      <dl>			
        <dt>Location:</dt>
        <dd><%= @event.location %></dd>
      </dl>
      <% end %>
      
      <dl>			
        <dt>&nbsp;</dt>
        <dd>&nbsp;</dd>
      </dl>
      
      <% if @event.event_image.to_s != "" %>
      <dl>			
        <dt>&nbsp;</dt>
        <dd><%= image_tag(@event.event_image, :width=>"100%") %></dd>
      </dl>
      <% end %>
      
      <dl>			
        <dt>&nbsp;</dt>
        <dd><%= @event.desc %></dd>
      </dl>
    </div>
</div>